VERSION 1.0 CLASS
BEGIN
  MultiUse = -1  'True
END
Attribute VB_Name = "TaskListSheet"
Attribute VB_GlobalNameSpace = False
Attribute VB_Creatable = False
Attribute VB_PredeclaredId = True
Attribute VB_Exposed = True
Public Function GetTaskListAsNodes() As Object
    Dim result As Nodes: Set result = New Nodes
    Dim r As Range
    For Each r In Range(Range("B4"), Range("B" & TaskListSheet.Rows.Count).End(xlUp))
        With New Node
            .TaskTitle = r.Value
            If IsNumeric(CStr(r.Offset(0, -1).Value)) Then
                .TaskTitle = r.Offset(0, -1).Value & "." & .TaskTitle
            End If
            .ShapeObjectName = CStr(r.Offset(0, 1).Value)
            Set .TaskListRange = r
            result.AddNode .Self
        End With
    Next
    Set GetTaskListAsNodes = result
End Function
